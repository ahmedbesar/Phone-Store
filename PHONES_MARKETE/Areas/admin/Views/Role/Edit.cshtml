@model VmRoleEdit


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Edit Role </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
               
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Role</h4>
                    <p class="card-description"> Edit Role  by changing Role Name</p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          role="form">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label for="Id">Role Id</label>
                            <input asp-for="Id" type="text" disabled class="form-control" placeholder="Role Id">

                        </div>
                        <div class="form-group">
                            <label for="RoleName">Role Name</label>
                            <input asp-for="RoleName" type="text" class="form-control" placeholder="Role Id">
                            <span asp-validation-for="RoleName" class="text-danger"> </span>
                        </div>


                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Update</button>
                        <button asp-action="List" class="btn btn-light">Cancel</button>



                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Users in this Role</h4>
                                <div class="row">
                                    <div class="col-12">
                                        
                                        <table id="order-listing" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Users  </th>
                                               
                                                </tr>
                                            </thead>
                                            <tbody>

                                                @if (Model.Users.Any())
                                                {

                                                    foreach (var user in Model.Users)
                                                    {
                                                        <tr style="margin:0px;padding:0px;">

                                                            <td class="col-md-12">@user</td>

                                                        </tr>

                                                    }
                                                }
                                                else
                                                {
                                                    <h5 class="card-title">No Users yet in this Role add one  or cancel</h5>
                                                }

                                            </tbody>
                                     
                                        </table>
                                        <div class="card-footer">

                                            <a asp-controller="Role" asp-action="EditUsersInRole"
                                               asp-route-roleId="@Model.Id" style="height:max-content"
                                               class="btn btn-info btn-fw"> Add or remove users from this role</a> 
                                            <a asp-action="list"
                                               class="btn btn-primary" style="width:auto">Back To List</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

