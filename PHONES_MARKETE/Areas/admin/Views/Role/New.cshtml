@model VmRoleNew
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create Role</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post"
                          asp-controller="Role" asp-action="New">
                        <div class="form-row">
                            <div asp-validation-summary="All">
                            </div>
                            <div class="col-md-6">
                                <label for="RoleName">Write Role Name</label>
                                <input asp-for="RoleName"
                                       type="text" class="form-control" id="fname" placeholder="Role Name"
                                       required="">
                                <span asp-validation-for="RoleName"></span>
                            </div>

                            <button type="submit" class="btn btn-solid">Add Role</button>
                            <a asp-action="List" class="btn btn-solid">Cancel</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>