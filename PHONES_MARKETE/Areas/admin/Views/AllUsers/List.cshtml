@model IEnumerable<MyApplicationUser>
@{
}

@section Styles
    {
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/assets/Backend/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
}


<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> All users </h3>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        
                    </ol>
                </nav>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add New Item</h4>
                    <div class="row">
                        <div class="col-12">
                            <a href="/Users/Register" class="btn btn-success btn-fw">New</a>
                            <table id="order-listing" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th hidden>User Id </th>
                                        <th>User Name </th>
                                        <th>Email </th>
                                        <th>Role </th>
                                        <th>Phone Number  </th>
                                        <th>City</th>
                                        <th>@ResGeneral.lblActions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr style="margin:0px;padding:0px;">
                                            <td hidden class="col-md-8">@user.Id</td>
                                            <td class="col-md-8">@user.UserName</td>
                                            <td class="col-md-8">@user.Email</td>
                                            <td class="col-md-8">@user.UserRoles</td>
                                            <td class="col-md-8">@user.PhoneNumber</td>
                                            <td class="col-md-8">@user.City</td>
                                            <td class="col-md-4" style="margin:0px;padding:0px;">

                                                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">

                                                    <a style="height:max-content"
                                                   asp-controller="AllUsers" asp-action="Edit" asp-route-id="@user.Id"
                                                       class="btn btn-info btn-fw">Edit</a>

                                                    <button type="submit" class="btn btn-danger btn-fw" 
                                                    onclick="return confirm('Are you sure you want to delete user : @user.UserName')">
                                                    Delete</button>
                                                </form>
                                                
                                                
                                                
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- main-panel ends -->
</div>

@section Scripts
    {
    <!-- plugins:js -->
    <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>
    <!-- End custom js for this page -->
}


